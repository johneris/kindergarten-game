<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ivBackgroundDesc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/btnWinneThePooh"
                android:layout_width="@dimen/newUser_btnAvatarWidth"
                android:layout_height="@dimen/newUser_btnAvatarHeight"
                android:contentDescription="@string/ivAvatarDesc"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_winnie_the_pooh" />

            <ImageButton
                android:id="@+id/btnMickeyMouse"
                android:layout_width="@dimen/newUser_btnAvatarWidth"
                android:layout_height="@dimen/newUser_btnAvatarHeight"
                android:contentDescription="@string/ivAvatarDesc"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_mickey_mouse" />

            <ImageButton
                android:id="@+id/btnDonaldDuck"
                android:layout_width="@dimen/newUser_btnAvatarWidth"
                android:layout_height="@dimen/newUser_btnAvatarHeight"
                android:contentDescription="@string/ivAvatarDesc"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_donald_duck" />

            <ImageButton
                android:id="@+id/btnHelloKitty"
                android:layout_width="@dimen/newUser_btnAvatarWidth"
                android:layout_height="@dimen/newUser_btnAvatarHeight"
                android:contentDescription="@string/ivAvatarDesc"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_hello_kitty" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/btnDora"
                android:layout_width="@dimen/newUser_btnAvatarWidth"
                android:layout_height="@dimen/newUser_btnAvatarHeight"
                android:contentDescription="@string/ivAvatarDesc"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_dora" />

            <ImageButton
                android:id="@+id/btnSpongebob"
                android:layout_width="@dimen/newUser_btnAvatarWidth"
                android:layout_height="@dimen/newUser_btnAvatarHeight"
                android:contentDescription="@string/ivAvatarDesc"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_spongebob" />

            <ImageButton
                android:id="@+id/btnPatrick"
                android:layout_width="@dimen/newUser_btnAvatarWidth"
                android:layout_height="@dimen/newUser_btnAvatarHeight"
                android:contentDescription="@string/ivAvatarDesc"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_patrick" />

            <ImageButton
                android:id="@+id/btnTweetyBird"
                android:layout_width="@dimen/newUser_btnAvatarWidth"
                android:layout_height="@dimen/newUser_btnAvatarHeight"
                android:contentDescription="@string/ivAvatarDesc"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_tweety_bird" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvEnterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/newUser_tvEnterName" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="@dimen/newUser_etNameWidth"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>
    
</FrameLayout>
